generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentType {
  pix
  creditCard
  bankSlip
}

enum ChargeStatus {
  pending
  paid
  failed
  canceled
}

model Customer {
  id                String       @id
  name              String
  document          String       @unique
  email             String       @unique
  phone             String
  createdAt         DateTime
  updatedAt         DateTime     @updatedAt
  note              Charge[]
}

model Charge {
  id                String       @id
  custumer          Customer     @relation(fields: [custumer_id], references: [id])
  custumer_id       String 
  value             Decimal
  coin              String
  paymentType       PaymentType
  status            ChargeStatus  
  createdAt         DateTime
  updatedAt         DateTime     @updatedAt
}